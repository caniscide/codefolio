  <% unless @weekly_budget_report.id %>
    <% add_style = 'style="cursor:pointer; color:#0000FF; text-decoration:underline;"'.html_safe %>
  <% end %>
  <% for i in (1..3) %>
    <br />
    <font id="test_link_<%= i %>" <%= add_style %>>test</font>
    <%= hidden_field_tag "test_#{i}", "test", :onblur => "if(this.value == ''){this.value ='test'}" %>
  <% end %> 
  
  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %><!-- end form tag -->
<script>
  <% for i in (1..3) %>
    $(document).ready(function() {
    
      $('#test_link_<%= i %>').on('click', function(event) {
        $('#test_link_<%= i %>').hide();
        $('#test_<%= i %>').attr("type","text");
        $('#test_<%= i %>').focus();
        event.preventDefault();
      });
    
      $('#test_<%= i %>').blur(function(event) {
        $('#test_<%= i %>').attr("type","hidden");
        $('#test_link_<%= i %>').html($('#test_<%= i %>').attr("value").replace(/</g, "< "));
        $('#test_link_<%= i %>').show();
        event.preventDefault();
      });
    
    });
  <% end %>
</script>
